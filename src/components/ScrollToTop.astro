---
import { Image } from 'astro:assets';
import arrowUpIcon from '../assets/icons/arrow-up.svg';
---

<html>
	<head>
		<script>
			document.addEventListener('DOMContentLoaded', () => {
				const scrollButton = document.getElementById('scroll-to-top');

				const handleScroll = () => {
					if (!scrollButton) return;
					if (window.scrollY > 200) {
						scrollButton.style.display = 'block';
					} else {
						scrollButton.style.display = 'none';
					}
				};

				window.addEventListener('scroll', handleScroll);
			});
		</script>
	</head>
	<body>
		<a id='scroll-to-top' href='#top' class='bg-accent dark:bg-darkMode-accent fixed bottom-10 right-10 rounded-full shadow-sm p-2 duration-150 ease-in' style='display: none;'>
			<Image src={arrowUpIcon} alt='Arrow Up Icon' height='20' width='20' class='aspect-square' />
		</a>
	</body>
</html>
